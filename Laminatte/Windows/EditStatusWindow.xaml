<Window x:Class="Laminatte.Windows.EditStatusWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Laminatte.Windows"
        mc:Ignorable="d"
        Title="EditStatusWindow" Height="100" Width="300">
    <Grid>
        <Image Source="/Resources/fon.png" Stretch="UniformToFill"/>
        <StackPanel>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Stretch" Margin="5">
                <Label Content="Статус:" Width="100" Foreground="White"/>
                <ComboBox x:Name="AccessBox" Width="180">
                    <ComboBoxItem Content="Открыт" TabIndex="0"/>
                    <ComboBoxItem Content="Готов" TabIndex="1"/>
                    <ComboBoxItem Content="Закрыт" TabIndex="2"/>
                </ComboBox>
            </StackPanel>
            <Button x:Name="SaveBTN" Content="Сохранить" Margin="5" Width="250" Click="SaveBTN_Click"/>
        </StackPanel>
    </Grid>
</Window>
