<Window x:Class="Laminatte.Windows.EditCostWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Laminatte.Windows"
        mc:Ignorable="d"
        Title="EditCostWindow" Height="200" Width="300">
    <Grid>
        <Image Source="/Resources/fon.png" Stretch="UniformToFill"/>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <Label x:Name="Name" Content="Наименование" Foreground="White" FontSize="20" HorizontalContentAlignment="Center" Margin="5"/>
            <Label Content="Введите стоимость:" Foreground="White" FontSize="14" HorizontalContentAlignment="Center" Margin="5"/>
            <TextBox KeyDown="CostBox_PreviewKeyDown" x:Name="CostBox" Width="250" Height="30" FontSize="18"/>
            <Button x:Name="SaveBTN" Content="Сохранить" Margin="5" Click="SaveBTN_Click"/>
        </StackPanel>
    </Grid>
</Window>
